<% if signed_in? %>
<div class="well well-small">
  <table>
    <tr>
      <td colspan=="2">
        <%= link_to "Edit Event", edit_event_path(@event) %>
      </td>
    </tr>
    <tr>
      <th colspan="2" align="left">Admin Details</th>
    </tr>
    <tr>
      <td width="110">Event ID:</td>
      <td><%= @event.id %></td>
    </tr>
    <tr>
      <td width="110">Event State:</td>
      <td><%= @event.event_state.name.to_s %></td>
    </tr>
    <tr>
      <td>Created:</td>
      <td><%= @event.created_at.strftime("%a, %b %d at %l:%M%P") %> by <%= @event.created_by %> </td>
    </tr>
    <tr>
      <td>Last Updated:</td>
      <td><%= @event.updated_at.strftime("%a, %b %d at %l:%M%P") %> by <%= @event.last_updated_by %></td>
    </tr>
  </table>
</div>
<% end %>
