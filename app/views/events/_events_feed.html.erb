<% if @upcoming_events.empty? %>  
  <div class="row">
    <div class="span7">
      <h3 class="event-header">No Upcoming Events at this time</h3>
      <p>Have an idea for an event? Email us!</p>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="span7">
      <h3 class="event-header">Upcoming Events</h3>
    </div>
  </div>
  <% @upcoming_events.each do |event| %>
    <div class="row">
      <div class="span7 event">
        <%= render event %>
      </div>
    </div>
  <% end %>
<% end %>

<% if @upcoming_events.count < 8 %>
  <div class="row">
    <div class="span7">
      <h3 class="event-header">Recent Events</h3>
    </div>
  </div>
  <% @recent_events.each do |event| %>
    <div class="row">
      <div class="span7 event recent">
        <%= render event %>
      </div>
    </div>
  <% end %>    
<% end %>