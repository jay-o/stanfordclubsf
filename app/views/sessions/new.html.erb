<% provide(:title, "Admin Login") %>
<div class="row">
  <div class="span6 offset3">
    <h2>Admin Login</h2>
    <%= simple_form_for(:session, url: sessions_path, html: { class: "form-horizontal" }) do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      
      <div class="form-actions">
        <%= f.submit "Sign in", class: 'btn btn-primary' %> <br> <br>
        <%= link_to "Forgot password?", new_password_reset_path %>
      </div>
    <% end %>
  </div>
</div>