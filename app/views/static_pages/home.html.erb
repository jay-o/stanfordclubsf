<div class="row">
  <div class="span7">
    <%= render 'events/events_feed' %>
  </div>
  <div class="span4 offset1 sidebar">
    <div class="widget">
      <div class="top-bar">
        <h4>Event Committees</h4>
      </div>
      <div class="content">
        <ul class="committee-list">
        <% @committees.each do |committee| %>
          <li><%= link_to committee.name, committee %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <%= render 'shared/join_scsf' %>
  </div>
</div>